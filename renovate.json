{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "tekton": {
    "schedule": ["on Saturday"],
    "fileMatch": [
      "\\.yaml$",
      "\\.yml$"
    ],
    "includePaths": [
      ".tekton/*", "pipelines/*"
    ]
  },
  "packageRules": [
    {
      "schedule": ["on Saturday"],
      "groupName": "Konflux build pipeline",
      "matchManagers": ["tekton"],
      "commitMessagePrefix": "NO-ISSUE: ",
      "labels": ["lgtm", "approved", "konflux"]
    }
  ]
}
